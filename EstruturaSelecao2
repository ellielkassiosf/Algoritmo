package aulas;

import java.util.Locale;
import java.util.Scanner;

public class EstrturaSelecao2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * Faça um programa que peça o nome e a senha e faça a verificação de uma
		 * variável que obtenha a senha e o usuário (como se fosse cadastrado) e retorne
		 * erro caso a senha ou o usuário esteja errado. A mensagem a ser mostrada deve
		 * ser de acordo com o respectivo erro!
		 * 
		 */
		Scanner sc = new Scanner(System.in).useLocale(Locale.US);

		String usuario;
		String usuariocadastrado = "ellielk";

		String senha;
		String senhaCadastrada = "abcdefgh";

		System.out.println("Entre com usuario: ");
		usuario = sc.nextLine();

		System.out.println("Entre com senha: ");
		senha = sc.nextLine();

		if (usuario.equals(usuariocadastrado) && senha.equals(senhaCadastrada)) {
			System.out.println("Usuário Encontrado");
		} else {
			System.out.println("Usuário ou senha incorretos, tente novamente");

		}
		sc.close();
    
    
