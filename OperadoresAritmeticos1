package aulas;

import java.util.Locale;
import java.util.Scanner;

public class Atividade2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
/*
 * Faça um Programa que pergunte quanto você ganha por hora e o número de horas
trabalhadas no mês. Calcule e mostre o total do seu salário no referido mês.

 */
		Scanner leia = new Scanner (System.in). useLocale (Locale.US);
		
		double remuneracaohora = 0.0;
		int horatrabalhada = 0;
		
		double salario;
		salario = remuneracaohora * horatrabalhada;
		
		
		System.out.println("Digite quanto você ganha por hora: ");
		remuneracaohora = leia.nextDouble();
		
		System.out.println("Digite quantas horas você trabalha por mês: ");
		horatrabalhada = leia.nextInt();
		
		System.out.println(remuneracaohora * horatrabalhada);
		salario = leia.nextDouble();
		
		
		leia.close();
		
				
				
		
		
		
	}

}
